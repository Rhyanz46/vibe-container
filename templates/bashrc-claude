# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# Load NVM (Node Version Manager)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

# History settings
export HISTSIZE=10000
export HISTFILESIZE=20000
export HISTCONTROL=ignoreboth:erasedups

# Shopt settings
shopt -s histappend
shopt -s checkwinsize

# Aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias cls='clear'
alias ..='cd ..'
alias ...='cd ../..'

# Colors
export LS_COLORS=$LS_COLORS"di=1;34:ln=1;36:ex=1;32"
alias grep='grep --color=auto'
alias ls='ls --color=auto'

# Go environment
export PATH=/home/claude/go/bin:$PATH

# Java environment
if [ -d "$HOME/.java" ]; then
    export JAVA_HOME="$HOME/.java/java-21-openjdk-amd64"
    export PATH="$JAVA_HOME/bin:$PATH"
fi

# Docker CLI
if [ -d "$HOME/.docker" ]; then
    export PATH="$HOME/.docker:$PATH"
fi

# Simple prompt
export PS1="\u@\h:\w\$ "

# Environment
export CONTAINER_ENV="isolated"
export NETWORK_MODE="host"

# Flutter environment
if [ -d "$HOME/flutter" ]; then
  export PATH="$HOME/flutter/bin:$PATH"
fi

# Rust environment
if [ -d "$HOME/.cargo/env" ]; then
  . "$HOME/.cargo/env"
fi

# Docker daemon connection
export DOCKER_HOST=tcp://localhost:2375

# Add .local/bin to PATH for Claude Code
export PATH="$HOME/.local/bin:$PATH"
